{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "rootDir": "src",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules",
      "typings"
    ],

    // Output
    "module": "esnext",
    "noEmit": true,
    "outDir": "build/dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",

    // Coding style
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "suppressImplicitAnyIndexErrors": true,

    "noImplicitAny": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
